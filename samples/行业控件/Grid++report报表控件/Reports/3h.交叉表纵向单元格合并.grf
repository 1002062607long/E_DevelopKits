Object Report
	Version='4.5'
	Title='按单统计销售明细报表'
	Object Font
		Name='宋体'
		Size=90000,0
		Weight=400
		Charset=134
	End
	Object Printer
		Size=256
		LeftMargin=1.5
		RightMargin=1.5
	End
	Object DetailGrid
		IsCrossTab=T
		FixCols=2
		ColLineColor=3DDkShadow
		RowLineColor=3DDkShadow
		PrintAdaptMethod=ToNewPage
		Object Recordset
			ConnectionString='Provider=Microsoft.Jet.OLEDB.4.0;\r\nUser ID=Admin;\r\nData Source=..\\Data\\Northwind.mdb'
			QuerySQL='select c.City,m.CustomerId,c.CompanyName,d.ProductID,p.ProductName,d.Quantity\r\nfrom (Orders m inner join \r\n([Order Details] as d inner join Products p \r\non P.ProductID=D.ProductID) on m.OrderId=d.OrderId)\r\nleft join Customers c on c.CustomerID=m.CustomerID\r\nwhere d.ProductID<8\r\norder by c.City,m.CustomerId, d.ProductID\r\n'
			Items Field
				Item
					Name='City'
				End
				Item
					Name='CustomerId'
				End
				Item
					Name='CompanyName'
				End
				Item
					Name='ProductID'
					Type=Integer
				End
				Item
					Name='ProductName'
				End
				Item
					Name='Quantity'
					Type=Integer
					Format='0.#########;;#'
				End
			End
		End
		Items Column
			Item
				Name='Amount'
				Width=1.24354
			End
			Item
				Name='CustomerID'
				Width=1.56104
			End
			Item
				Name='CustomerName'
				Width=2.67229
			End
			Item
				Name='City'
				Width=1.69333
			End
		End
		Object ColumnContent
			Height=0.608542
			Items ColumnContentCell
				Item
					Column='Amount'
					TextAlign=MiddleRight
					DataField='Quantity'
				End
				Item
					Column='CustomerID'
					DataField='CustomerId'
				End
				Item
					Column='CustomerName'
					DataField='CompanyName'
				End
				Item
					Column='City'
					TextAlign=MiddleCenter
					DataField='City'
				End
			End
		End
		Object ColumnTitle
			Height=0.79375
			Object Font
				Name='宋体'
				Size=90000,0
				Bold=T
				Charset=134
			End
			RepeatStyle=OnPage
			Items ColumnTitleCell
				Item
					GroupTitle=F
					Column='City'
					TextAlign=MiddleCenter
					Text='城市'
				End
				Item
					GroupTitle=F
					Column='CustomerID'
					TextAlign=MiddleCenter
					Text='客户编号'
				End
				Item
					GroupTitle=F
					Column='CustomerName'
					TextAlign=MiddleCenter
					Text='客户名称'
				End
				Item
					GroupTitle=F
					Column='Amount'
					FreeCell=T
					Items Control
						Item
							Type=FieldBox
							Name='FieldBox1'
							Dock=Fill
							TextAlign=MiddleCenter
							DataField='ProductName'
						End
					End
				End
			End
		End
		Items Group
			Item
				Name='TotalGroup'
				Object GroupHeader
					Height=0
				End
				Object GroupFooter
					BackColor=InfoBk
					Height=0.635
					Object Font
						Name='宋体'
						Size=90000,0
						Bold=T
						Charset=134
					End
					Items Control
						Item
							Type=StaticBox
							Name='StaticBox2'
							BackColor=0x00ecebd5
							BorderStyles=[DrawRight]
							AlignColumn='CustomerID'
							AlignColumnEx='CustomerName'
							Left=1.69333
							Width=4.23333
							Height=0.608542
							TextAlign=MiddleRight
							Text='总计'
						End
					End
				End
			End
			Item
				Name='SubGroup'
				ByFields='City'
				Object GroupHeader
					Height=0.635
					OccupyColumn=T
					IncludeFooter=T
					OccupiedColumns='City'
					VAlign=Middle
				End
				Object GroupFooter
					BackColor=Aqua
					Height=0.608542
					Items Control
						Item
							Type=StaticBox
							Name='StaticBox1'
							BackColor=0x00ecebd5
							BorderStyles=[DrawRight]
							AlignColumn='CustomerID'
							AlignColumnEx='CustomerName'
							Left=1.69333
							Width=4.23333
							Height=0.608542
							TextAlign=MiddleRight
							Text='小计'
						End
					End
				End
			End
		End
		Object CrossTab
			PercentFormat='0.##%'
			HCrossFields='ProductID'
			VCrossFields='City;CustomerId'
			ListCols=3
		End
	End
	Items Parameter
		Item
			Name='Comment'
			Value='演示交叉表分组单元格合并功能。\r\n\r\n在定义好交叉表之后，再定义占列式分组即可。\r\n'
		End
	End
